<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content"
            android:padding="5sp">

            <LinearLayout
                android:layout_width="match_parent"
                android:padding="5sp"
                android:orientation="vertical"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="22sp"
                    android:layout_gravity="center"
                    android:textStyle="bold"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:id="@+id/subject_name" />

                <TextView
                    android:textAlignment="center"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:id="@+id/sub_per"
                    android:textSize="20sp" />

            </LinearLayout>

            <LinearLayout
                android:padding="10sp"
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="wrap_content">

                <Button
                    android:layout_marginLeft="5sp"
                    android:layout_marginRight="5sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/button_style2"
                    android:textColor="@drawable/button_style2_text"
                    android:textAlignment="center"
                    android:text="Attended"
                    android:id="@+id/add" />


                <Button
                    android:id="@+id/sub"
                    android:layout_marginLeft="5sp"
                    android:layout_marginRight="5sp"
                    android:background="@drawable/button_style1"
                    android:textColor="@drawable/button_style1_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Bunked" />


                <Button
                    android:id="@+id/remove"
                    android:background="@drawable/button_style3"
                    android:textColor="@drawable/button_style3_text"
                    android:layout_marginLeft="5sp"
                    android:layout_marginRight="5sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Clear" />

            </LinearLayout>

            <Button

                android:textColor="#7f807b"

                android:layout_marginLeft="15sp"
                android:layout_marginRight="10sp"
                android:padding="5sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="15sp"

                android:id="@+id/show_info"
                android:text="Show Details"
                android:background="@drawable/buttonshape" />

        </LinearLayout>

    </android.support.v7.widget.CardView>


</LinearLayout>